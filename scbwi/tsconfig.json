{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "lib": [ "es6", "dom" ],
    "types": [ "webpack-env" ],
    "allowJs": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "bin",
    "node_modules"
  ]
}